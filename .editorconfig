# EditorConfig team IDE settings: https://editorconfig.org/#download

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8

# 4 space indentation
[*]
indent_style = space
indent_size = 4

# Indentation override for all JS under "scripts" and CSS under "styles" directory
[*{scripts/**.js,styles/**.css}]
indent_style = space
indent_size = 2

# Max Line length is experimental, but team suggests you set your IDE to the following prior to auto-formatting
max_line_length=120